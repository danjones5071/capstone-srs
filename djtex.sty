%********** PROBABILITY *********************************
%********************************************************

\newcommand{\smatrix}[2]
{
	\ensuremath
	{
		\left( \ 
		\begin{matrix}
		#1 \\
		#2
		\end{matrix}
		\ \right)
	}
}

% Define the COMB command to display the equation for a combination.
\newcommand{\comb}[2]
{
	\ensuremath
	{
		C_{#1, #2} = 
		\left( \ 
		\begin{matrix}
		#2 \\
		#1
		\end{matrix}
		\ \right)
		= \frac{#2 !}{#1 !(#2 - #1)!}
	}
}

\newcommand{\ccomb}[2]
{
	\ensuremath
	{
		\frac{#2 !}{#1 !(#2 - #1)!}
	}
}

% Define the PERM command to display the equation for a permutation.
\newcommand{\perm}[2]
{
	\ensuremath
	{
		P_{#1, #2} = \frac{#2 !}{(#2 - #1)!}
	}
}





