% Define the DEFN command to make definitions bold and italic.
\newcommand{\defn}[1]
{
	\!\textbf{#1}\!
}

% Define the RECAP command to put a box around a recap section.
\newcommand{\recap}[1]
{
	\vspace{12pt}
	\noindent\fbox
	{
		\parbox{\dimexpr\linewidth-2\fboxsep-\fboxrule\relax}
		{
			\center{ $\bigstar$  \ \underline{\textsc{\large{Recap}}} \  $\bigstar$}
			\begin{itemize}
				#1
			\end{itemize}
		}
	
	}
	\vspace{12pt}
}





